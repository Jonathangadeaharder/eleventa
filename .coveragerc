[run]
source = .
parallel = True
data_file = .coverage

[report]
# Exclude patterns
exclude_lines =
    pragma: no cover
    def __repr__
    raise NotImplementedError
    pass
    raise ImportError

# Files to omit from reporting
omit =
    */site-packages/*
    */dist-packages/*
    */pyscript*
    */shibokensupport/*
    */signature_bootstrap.py
    */test_*.py
    # Utility scripts
    run_unified_tests.py
    copy_files_to_clipboard.py
    download_icons.py
    python-file-contents-collector.py
    setup.py
    # Alembic migrations
    alembic/*
    alembic/versions/*
    # Configuration files
    conftest.py
    config.py

[paths]
source =
    .

[html]
directory = htmlcov
